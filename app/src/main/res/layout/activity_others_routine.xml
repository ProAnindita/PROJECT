<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OthersRoutine"
    android:padding="16dp">

    <!-- Label for Batch Spinner -->
    <TextView
        android:id="@+id/tvBatchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Batch:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Spinner for Batch (56–65) -->
    <Spinner
        android:id="@+id/spinnerBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBatchLabel"
        app:layout_constraintStart_toEndOf="@id/tvBatchLabel" />

    <!-- Label for Section Spinner -->
    <TextView
        android:id="@+id/tvSectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Section:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBatchLabel"
        app:layout_constraintStart_toEndOf="@id/spinnerBatch" />

    <!-- Spinner for Section (A–I) -->
    <Spinner
        android:id="@+id/spinnerSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBatchLabel"
        app:layout_constraintStart_toEndOf="@id/tvSectionLabel" />

    <!-- RecyclerView for the carousel -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/carouselRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingVertical="30dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/tvBatchLabel"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
