<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <solid android:color="#006a00" />
        </shape>
    </item>

    <!-- Button background with gradient -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient
                android:startColor="#97c93c"
                android:endColor="#79b84c"
                android:angle="90" />
        </shape>
    </item>

    <!-- Inner shadow -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient
                android:startColor="#88a842"
                android:endColor="#97c93c"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
