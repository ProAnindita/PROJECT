<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#AA000000" />
            <!-- Slightly transparent black for the shadow -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Button layer -->
    <item>
        <shape android:shape="rectangle">
            <!-- Rounded corners -->
            <corners android:radius="10dp" />

            <!-- Green background -->
            <solid android:color="#006A00" />

            <!-- Optional stroke -->
            <stroke
                android:width="1dp"
                android:color="#388E3C" />
        </shape>
    </item>
</layer-list>
